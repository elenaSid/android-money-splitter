<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="13dp">

    <TextView
        style="@style/SplitterAppTheme.Weight.Starting.TextView.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/items_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            style="@style/SplitterAppTheme.ItemList.ColumnTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/items_item" />

        <TextView
            style="@style/SplitterAppTheme.ItemList.ColumnTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/items_price" />
        <TextView
            style="@style/SplitterAppTheme.ItemList.ColumnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="end"
            android:minWidth="32dp"
            android:text="@string/items_buyer" />
    </LinearLayout>
</LinearLayout>