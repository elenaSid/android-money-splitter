<resources>
    <!-- Themes -->
    <style name="MoneySplitter.Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimaryDark">@color/black_20_tint</item>
        <item name="android:navigationBarColor">@color/black50_tint</item>
        <item name="android:popupMenuStyle">@style/MoneySplitter.PopupMenu</item>
        <item name="android:popupWindowStyle">@style/MoneySplitter.PopupMenu</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MoneySplitter.Theme_Root" parent="MoneySplitter.Theme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MoneySplitter.Theme_Wizard" parent="MoneySplitter.Theme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="MoneySplitter.Theme_AddFamily" parent="MoneySplitter.Theme">
        <item name="colorPrimary">@color/alabaster_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/alabaster_background</item>
    </style>

    <style name="MoneySplitter.ThemeOverlay_BlueAccent" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Themes -->

    <!-- Widgets -->
    <style name="MoneySplitter.PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">16dp</item>
        <item name="android:dropDownVerticalOffset">-16dp</item>
    </style>

    <style name="MoneySplitter.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="tint">@color/white</item>
    </style>

    <style name="MoneySplitter.DropDownMenuItem" parent="android:Widget">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:maxLines">1</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="MoneySplitter.TextView_ShoppingItem" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textAppearance">@style/MoneySplitter.Text_Normal_16</item>
    </style>

    <style name="MoneySplitter.PopupDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/MoneySplitter.Animation.PopupDialog</item>
    </style>

    <style name="MoneySplitter.Animation.PopupDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_open</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_close</item>
    </style>

    <style name="MoneySplitter.TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextAppearance">@style/MoneySplitter.Text_Normal_12</item>
        <item name="android:textColorHint">@color/black_60</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/text_input_box</item>
    </style>

    <style name="MoneySplitter.TextInputEditText" parent="android:Widget">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">58dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAppearance">@style/MoneySplitter.Text_Normal_16</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Widgets -->

    <!-- Text's Styles -->
    <style name="MoneySplitter.Text_Normal_32" parent="android:TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="MoneySplitter.Text_Bold_28" parent="android:TextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MoneySplitter.Text_Medium_20" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MoneySplitter.Text_Normal_16" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MoneySplitter.Text_Normal_12" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MoneySplitter.Text_ColumnTitle" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/silver_chalice_counter_text</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <!-- Text's Styles -->
</resources>
