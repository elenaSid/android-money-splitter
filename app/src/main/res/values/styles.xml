<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplitterAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimaryDark">@color/black_20_tint</item>
        <item name="android:navigationBarColor">@color/black50_tint</item>
        <item name="android:popupMenuStyle">@style/SplitterAppTheme.PopupMenu</item>
        <item name="android:popupWindowStyle">@style/SplitterAppTheme.PopupMenu</item>
    </style>

    <style name="SplitterAppTheme.Root" parent="SplitterAppTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplitterAppTheme.PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">16dp</item>
        <item name="android:dropDownVerticalOffset">-16dp</item>
    </style>

    <style name="SplitterAppTheme.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="elevation">12dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="SplitterAppTheme.BlueAccent">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplitterAppTheme.DropDownMenuItem" parent="android:Widget">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:maxLines">1</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="SplitterAppTheme.TextView.Normal_32" parent="android:Widget">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="SplitterAppTheme.AddFamily" parent="SplitterAppTheme">
        <item name="colorPrimary">@color/alabaster_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/alabaster_background</item>
    </style>

    <style name="SplitterAppTheme.TextView.Bold_28" parent="android:Widget">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SplitterAppTheme.TextView.Normal_16" parent="android:Widget">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SplitterAppTheme.Weight.Starting.TextView.Bold" parent="SplitterAppTheme.TextView.Bold_28">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="SplitterAppTheme.ItemList.ColumnTitle" parent="android:Widget">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/silver_chalice_counter_text</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SplitterAppTheme.ItemList.TextField" parent="SplitterAppTheme.TextView.Normal_16">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>

    <style name="SplitterAppTheme.PopupDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/SplitterAppTheme.Animation.PopupDialog</item>
    </style>

    <style name="SplitterAppTheme.Animation.PopupDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_open</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_close</item>
    </style>
</resources>
