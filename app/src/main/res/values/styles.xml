<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplitterAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimaryDark">@color/black_20_tint</item>
        <item name="android:navigationBarColor">@color/black50_tint</item>
        <item name="android:popupMenuStyle">@style/SplitterAppTheme.PopupMenu</item>
        <item name="android:popupWindowStyle">@style/SplitterAppTheme.PopupMenu</item>
    </style>

    <style name="SplitterAppTheme.Root" parent="SplitterAppTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplitterAppTheme.PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">16dp</item>
        <item name="android:dropDownVerticalOffset">-16dp</item>
    </style>

    <style name="SplitterAppTheme.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="elevation">12dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="SplitterAppTheme.BlueAccent">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplitterAppTheme.DropDownMenuItem" parent="android:Widget">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:maxLines">1</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">12dp</item>
    </style>
</resources>
