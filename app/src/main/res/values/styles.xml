<resources>
    <!-- Themes -->
    <style name="MoneySplitter.Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="MoneySplitter.Theme_Wizard" parent="MoneySplitter.Theme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="MoneySplitter.ThemeOverlay_BlueAccent" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimaryDark">@color/black_20</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="MoneySplitter.Theme_Edit" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/MoneySplitter.ActionBar.Close</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="MoneySplitter.ActionBar.Close" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black_87</item>
        <item name="navigationIcon">@drawable/ic_close</item>
    </style>

    <style name="MoneySplitter.ThemeOverlay_TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="MoneySplitter.Theme_Intro" parent="MoneySplitter.Theme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <!-- Themes -->

    <!-- Widgets -->
    <style name="MoneySplitter.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="tint">@color/white</item>
    </style>

    <style name="MoneySplitter.TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextAppearance">@style/MoneySplitter.Text_Normal_12</item>
        <item name="android:textColorHint">@color/black_60</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/text_input_box</item>
        <item name="materialThemeOverlay">@style/MoneySplitter.ThemeOverlay_TextInputEditText</item>
    </style>

    <style name="MoneySplitter.TextInputEditText" parent="android:Widget">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">58dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAppearance">@style/MoneySplitter.Text_Normal_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="MoneySplitter.TextInputLayout_Price"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextAppearance">@style/MoneySplitter.Text_Normal_12</item>
        <item name="android:textColorHint">@color/black_60</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/text_input_box</item>
        <item name="materialThemeOverlay">@style/MoneySplitter.ThemeOverlay_TextInputEditText</item>
        <item name="android:textAppearance">@style/MoneySplitter.Text_Normal_16</item>
        <item name="suffixTextAppearance">@style/MoneySplitter.Text_Normal_16</item>
        <item name="endIconDrawable">@drawable/ic_money</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="MoneySplitter.Tag" parent="Widget.MaterialComponents.Chip.Action">
        <item name="enforceTextAppearance">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="chipCornerRadius">14dp</item>
        <item name="closeIconStartPadding">0dp</item>
        <item name="closeIconEndPadding">0dp</item>
        <item name="closeIconVisible">true</item>
        <item name="closeIconTint">@color/chip_close_icon</item>
        <item name="chipMinHeight">28dp</item>
        <item name="chipMinTouchTargetSize">28dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="textStartPadding">6dp</item>
        <item name="textEndPadding">5dp</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/MoneySplitter.Text_Medium_14</item>
        <item name="chipBackgroundColor">@color/colorAccent</item>
    </style>

    <style name="MoneySplitter.Chip_FamilyMember" parent="Widget.MaterialComponents.Chip.Action">
        <item name="enforceTextAppearance">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="chipCornerRadius">14dp</item>
        <item name="closeIconStartPadding">0dp</item>
        <item name="closeIconEndPadding">0dp</item>
        <item name="chipMinHeight">28dp</item>
        <item name="chipMinTouchTargetSize">28dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="textStartPadding">6dp</item>
        <item name="textEndPadding">5dp</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/MoneySplitter.Text_Medium_14</item>
        <item name="chipBackgroundColor">@color/colorAccent</item>
    </style>

    <style name="MoneySplitter.TextAppearanceButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MoneySplitter.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/material_btn_background</item>
        <item name="cornerRadius">0dp</item>
        <item name="rippleColor">@color/black_20</item>
        <item name="iconSize">16dp</item>
        <item name="iconPadding">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textAppearance">@style/MoneySplitter.TextAppearanceButton</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Widgets -->

    <!-- Text's Styles -->
    <style name="MoneySplitter.Text_Normal_32" parent="android:TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MoneySplitter.Text_Medium_20" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MoneySplitter.Text_Medium_18" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MoneySplitter.Text_Medium_16" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MoneySplitter.Text_Normal_16" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MoneySplitter.Text_Medium_14" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MoneySplitter.Text_Normal_14" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MoneySplitter.Text_Normal_12" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MoneySplitter.Text_Medium_10" parent="android:TextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <!-- Text's Styles -->
</resources>
